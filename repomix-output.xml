import BookingScreen from '../screens/BookingScreen';

const Placeholder = () => <View style={{flex:1, backgroundColor: Colors.background}} />;

const Stack = createNativeStackNavigator();
const Tab = createBottomTabNavigator();


function HomeTabs() {
